<h1>Edit Your Passsword My Very Best</h1>

<%= form_with model: Current.user, url: edit_password_path, local:true do |form| %>
<% if form.object.errors.any?%>
  <div class="alert alert-danger alert-dismissable">
  <% form.object.errors.full_messages.each do |message| %>
    <div><%= message %></div>
  <% end %>
  </div>
<% end %>
    <div class = "mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "ifedan" %>
    </div>
    <div class = "mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "ifedan" %>
    </div>
    <div>
    <%= form.submit "Update Your Password Nkem", class: "btn btn-primary", local:true, data: { turbo: false } %>
    </div>
<% end %>
