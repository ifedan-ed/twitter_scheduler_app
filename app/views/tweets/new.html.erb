<h2> Schedule a Tweet Earthling! </h2>
<%= form_with model: @tweet do |form| %>
	<%= render "shared/form_errors", form: form %>
	<div class="mb-3">
		<%= form.label :twitter_account_id %>
		<%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {}, {class: "form-control"} %>
		<%= link_to "Connect Another Twitter Account My Very Best", "/auth/twitter", class: "btn btn-primary mt-3" %>
	</div>
	<div class="mb-3">
		<%= form.label :body %>
		<%= form.text_area :body, class: "form-control" %>
	</div>
	<div class="mb-3">
		<%= form.label :publish_at %>
		<div class = "form-control">
			<%= form.datetime_select :publish_at%>
		</div>
	</div>
	<%= form.button "Schedule", data: { turbo: false }, class: "btn btn-primary" %>
<% end %>
