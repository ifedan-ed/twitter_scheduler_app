<div class="d-flex align-items-center justify-content-between">
	<h1>Twitter Accounts</h1>
	<%= link_to "Connect a Twitter Account", "auth/twitter", method: :post, local:true, data: { turbo: false }, class: "btn btn-primary" %>
</div>
<% @twitter_accounts.each do |twitter_account| %>
	<div class="me-4">
		<div class="d-flex align-items-center mb-4">
			<img src="<%= twitter_account.image %>" class = "rounded-circle">
			<%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank %>
		</div>
		<%= button_to "Disconnect Your Account", twitter_account, local:true, data: { turbo: false }, class: "btn btn-danger" %>
	</div>
<% end %>
