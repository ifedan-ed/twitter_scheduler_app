<h2>Reset Your Password, Mine</h2>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
<% if form.object.errors.any?%>
  <div class="alert alert-danger alert-dismissable">
  <% form.object.errors.full_messages.each do |message| %>
    <div><%= message %></div>
  <% end %>
  </div>
<% end %>
<div class = "mb-3">
    <div class = "mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "ifedan" %>
    </div>
    <div class = "mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "ifedan" %>
    </div>
    <div>
    <%= form.submit "Reset Password", class: "btn btn-primary", local:true, data: { turbo: false } %>
    </div>
<% end %>
